{
  "name": "extension",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Chrome Extension - Browser Recap",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build",
    "build:chrome": "vite build --browser=chrome",
    "build:firefox": "vite build --browser=firefox",
    "lint": "eslint --max-warnings 0",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@recap/api": "workspace:*",
    "@recap/eslint-config": "workspace:*",
    "@recap/react-query": "workspace:*",
    "@recap/tailwind-config": "workspace:*",
    "@recap/tokens": "workspace:*",
    "@recap/typescript-config": "workspace:*",
    "@recap/ui": "workspace:*",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^22.15.3",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@types/webextension-polyfill": "^0.12.1",
    "@vitejs/plugin-react": "^4.4.1",
    "tailwindcss": "^4.0.0",
    "typescript": "5.9.2",
    "vite": "^6.0.0"
  }
}
